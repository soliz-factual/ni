ni::module->new(name         => '/lib/class',
                dependencies => ['ni.module:/lib/quote'],
                code         => <<'_');
package ni::class;
push our @ISA, qw/ni::serializable ni::constructable ni::persistent_identity/;
sub init {
  my $self = shift;
  *{$self->package . "::class"} = sub {$self};
}
sub package {shift->name}
_

ni::class->new(name => 'ni::class');
