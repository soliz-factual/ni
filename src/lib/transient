ni::class->new(name => 'ni::transient_object',
               isa  => ['ni::constructable', 'ni::transient_identity']);

ni::class->new(name => 'ni::transient_identity',
               isa  => ['ni::named'],
               code => <<'_');
use Scalar::Util;
sub DESTROY {delete $ni::context{shift->name}}
sub add_to_context {
  my $self = shift;
  Scalar::Util::weaken($ni::context{$self->name} = $self);
  $self;
}
_
